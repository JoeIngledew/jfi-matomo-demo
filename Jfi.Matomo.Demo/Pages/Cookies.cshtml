@page
@model CookiesModel
@{
    ViewData["Title"] = "Cookies";
}

<h1 class="govuk-heading-l">Cookies</h1>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            Cookies are small files saved on your phone, tablet or computer when you visit a website.
        </p>
        <p class="govuk-body">
            We use cookies to make this site work. We'd also like to use analytics cookies so we can understand how you use the service and make improvements.
        </p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-m">Essential cookies</h2>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            Essential cookies keep your information secure while you use this service. We do not need to ask permission to use them.
        </p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="col">Name</th>
                    <th class="govuk-table__header" scope="col">Purpose</th>
                    <th class="govuk-table__header" scope="col">Expires</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td scope="row" class="govuk-table__cell">.Jfi.Matomo.Session</td>
                    <td class="govuk-table__cell">Used to save information you have entered into the form</td>
                    <td class="govuk-table__cell">20 hours, or when you close the browser</td>
                </tr>
                <tr class="govuk-table__row">
                    <td scope="row" class="govuk-table__cell">.Jfi.Matomo.CookieConsent</td>
                    <td class="govuk-table__cell">Saves your cookie consent settings</td>
                    <td class="govuk-table__cell">1 day</td>
                </tr>
            </tbody>
        </table>
    </div>    
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-m">Analytics cookies (optional)</h2>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            With your permission, we use Matomo to collect data about how you use this service. This information helps us to improve our service. 
        </p>
        <p class="govuk-body">
            If you choose to reject analytics at any time, these cookies will be removed.
        </p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="col">Name</th>
                    <th class="govuk-table__header" scope="col">Purpose</th>
                    <th class="govuk-table__header" scope="col">Expires</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td scope="row" class="govuk-table__cell">_pk_id</td>
                    <td class="govuk-table__cell">Used to store a few details about you such as your unique visitor ID</td>
                    <td class="govuk-table__cell">13 months</td>
                </tr>
                <tr class="govuk-table__row">
                    <td scope="row" class="govuk-table__cell">_pk_ref</td>
                    <td class="govuk-table__cell">Used to store the referrer initially used to visit the service</td>
                    <td class="govuk-table__cell">6 months</td>
                </tr>
            </tbody>
        </table>
    </div>    
</div>

<form method="post">
    <govuk-radios asp-for="ConsentCookieValue">
        <govuk-radios-fieldset>
            <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                Do you want to accept analytics cookies?
            </govuk-radios-fieldset-legend>

            <govuk-radios-hint>
                You can change this at any time
            </govuk-radios-hint>
            <govuk-radios-item value="accept">Yes</govuk-radios-item>
            <govuk-radios-item value="reject">No</govuk-radios-item>
        </govuk-radios-fieldset>
    </govuk-radios>            
    <div class="govuk-button-group">
        <button type="submit" class="govuk-button" data-module="govuk-button">
            Save preferences
        </button>
    </div>
</form>